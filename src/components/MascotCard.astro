---
interface Props {
  name: string;
  image: string;
  description: string;
}

const { name, image, description } = Astro.props;
---

<div class="mascot-card bg-white rounded-lg shadow-lg p-4">
  <img src={image} alt={name} class="w-full h-auto rounded-md mb-4" />
  <h2 class="text-2xl font-bold mb-2">{name}</h2>
  <p class="text-gray-700">{description}</p>
</div>
